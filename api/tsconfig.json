{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
